<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <FrameLayout
            android:id="@+id/music_cv_default"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/music_cv_default" >

            <ImageView
                android:id="@+id/music_cover"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp" />

            <View
                android:id="@+id/music_cv_mask"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/music_cv_mask" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/music_cv_default"
            android:layout_alignLeft="@id/music_cv_default"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/music_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="专辑名字test"
                android:textColor="@color/fav_music_name"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:singleLine="true"
                android:text="作者名字test"
                android:textColor="@color/fav_artist_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/item_deliver_line" />

</LinearLayout>