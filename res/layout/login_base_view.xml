<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <FrameLayout
        android:id="@+id/guide_shell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp">

        <FrameLayout
            android:id="@+id/slider_title_shell"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/slider_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="35dp"
                    android:text="Jing"
                    android:textColor="#FF393939"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/slider_title_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:text="Explore the unknown world of music"
                    android:textColor="#4F393939"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/slider_icon"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/welcome_cover" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <View
                android:id="@+id/login_index_cursor_0"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="5dp"
                android:background="@drawable/index_round_off" />

            <View
                android:id="@+id/login_index_cursor_1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="5dp"
                android:background="@drawable/index_round_off" />

            <View
                android:id="@+id/login_index_cursor_2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="5dp"
                android:background="@drawable/index_round_off" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/login_animation_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="#00000000"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#00000000" >

            <TextView
                android:id="@+id/login_go_back_text"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/draw_round_tangle_red"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white_text"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login_register_text"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/draw_round_tangle_blue"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/white_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="18dp"
            android:text="No one know the deep heart of yourself"
            android:textColor="#FF666666"
            android:textSize="10sp" />
    </FrameLayout>

</FrameLayout>