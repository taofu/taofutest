<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white_text"
        android:orientation="horizontal"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/headViewImageView"
            style="@style/normal_item_icon" >
        </ImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                style="@style/normal_item_main_text" />

            <TextView
                android:id="@+id/content"
                style="@style/normal_item_sub_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/new_message"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/draw_round_jing_green"
            android:gravity="center"
            android:shadowColor="#FF000000"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="#447731"
            android:textSize="0sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/friends_follow_listen"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@drawable/friends_ext_right_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/deliver_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/item_deliver_line" />

</LinearLayout>