    <style name="normal_item_icon">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="normal_item_main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">14sp</item>
         <item name="android:singleLine">true</item>
         <item name="android:ellipsize">end</item>
    </style>

    <style name="normal_item_sub_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18.5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FFcccccc</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="settings_title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF444444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="settings_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@color/white_text</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settings_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="settings_item_icon">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="settings_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">58dp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="settings_title_deliver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/item_deliver_line</item>
    </style>

    <style name="settings_item_deliver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/item_deliver_line</item>
    </style>

    <style name="settings_sleep_seek_shadow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:background">@drawable/draw_round_jing_gray</item>
    </style>

    <style name="settings_item_switch">
        <item name="android:layout_width">@dimen/switchBtn_width</item>
        <item name="android:layout_height">@dimen/switchBtn_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#00000000</item>
        <item name="android:textSize">30sp</item>
        <item name="switchMinWidth">@dimen/switchBtn_min_width</item>
        <item name="switchPadding">10dip</item>
        <item name="switchTextAppearance">@android:attr/textAppearanceLarge</item>
        <item name="textOff"></item>
        <item name="textOn"></item>
        <item name="thumb">@drawable/draw_setting_switch_cursor</item>
        <item name="thumbTextPadding">8dip</item>
        <item name="track">@drawable/setting_switch_off</item>
    </style>

    <style name="settings_item_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:src">@drawable/search_select_left_arrow</item>
    </style>

    <style name="share_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/draw_round_tangle_jing_green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_info_item_">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#555555</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="user_info_item_v_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/artist_text</item>
    </style>

    <style name="user_info_item_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="user_info_item_h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/artist_text</item>
    </style>

    <style name="back_title_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>